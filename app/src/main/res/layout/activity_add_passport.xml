<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPassportActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/title_close"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/close"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_passport_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/add_passport"
        app:layout_constraintBottom_toButtomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_close" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_passport_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_passport_tip"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toButtomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_passport_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_passport_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_passport_warning"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toButtomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_passport_tip"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passport_id_title"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/passport_id"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_passport_warning"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_passport_id_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toRightOf="@id/passport_id_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/passport_id_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_passport_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passport_name_title"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/passport_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passport_id_title"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_passport_name_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toRightOf="@id/passport_name_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/passport_name_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_passport_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/passport_birth_date_title"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/passport_birth_date"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passport_name_title"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_passport_birth_date_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toRightOf="@id/passport_birth_date_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/passport_birth_date_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_passport_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/connect_with_passport"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>